root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{c,cc,cpp,h,hpp,hh,inl}]
indent_size = 2

[*.{yml,yaml,json}]
indent_size = 2

[*.cmake]
indent_size = 2
